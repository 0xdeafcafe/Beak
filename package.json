{
  "name": "beak",
  "version": "0.0.1",
  "description": "Postman, but sexi",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/electron-builder",
      "**/electron-builder/**",
      "**/electron-webpack",
      "**/electron-webpack/**"
    ]
  },
  "engines": {
    "yarn": "^1.4.2"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "preelectron": "yarn build",
    "electron": "lerna run electron --scope beak-electron",
    "prepackage": "yarn build",
    "package": "lerna run package --scope beak-electron --stream",
    "start": "lerna exec --parallel --stream yarn start",
    "test": "lerna run test --parallel",
    "lint": "eslint -c .eslintrc --ext .jsx --ext .js --ext .tsx --ext .ts './packages/'",
    "unfuck": "rm -rf ./node_modules && rm -rf ./node_modules/packages/beak-app && rm -rf ./node_modules/packages/beak-electron && yarn --force"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.6",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "lerna": "^3.22.1",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "chokidar": "^3.4.1"
  }
}
