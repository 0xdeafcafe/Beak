{
  "name": "beak",
  "version": "0.0.1",
  "description": "Postman, but sexi",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/electron-builder",
      "**/electron-builder/**",
      "**/electron-webpack",
      "**/electron-webpack/**"
    ]
  },
  "engines": {
    "yarn": "^1.4.2"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "preelectron": "yarn build",
    "electron": "lerna run electron --scope @beak/electron-host",
    "prepackage": "yarn build",
    "package": "lerna run package --stream --scope @beak/electron-host",
    "package-only": "lerna run package --stream --scope @beak/electron-host",
    "start": "lerna exec --parallel --concurrency 1 --stream --scope '@beak/{app,electron-host}' yarn start",
    "test": "lerna run test --parallel",
    "lint": "eslint -c .eslintrc --ext .tsx --ext .ts './packages/'",
    "unfuck": "lerna clean && yarn --force"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.6",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "lerna": "^3.22.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@cuvva/ksuid": "^1.0.0"
  }
}
