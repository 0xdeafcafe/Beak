{
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",

    "declaration": true,
    "strict": true,
    "target": "ES2018",
    "moduleResolution": "node",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@beak/app": ["packages/app/src"],
      "@beak/app/*": ["packages/app/src/*"],
      "@beak/common": ["packages/common/src"],
      "@beak/common/*": ["packages/common/src/*"],
      "@beak/electron-host": ["packages/electron-host/src"],
      "@beak/electron-host/*": ["packages/electron-host/src/*"],
      "@beak/requester-node": ["packages/requester-node/src"],
      "@beak/requester-node/*": ["packages/requester-node/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
