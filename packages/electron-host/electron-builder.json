{
  "appId": "io.0xdeafcafe.beak",
  "productName": "Beak",
  "copyright": "Copyright Â© 2020 Alexander Forbes-Reed",
  "files": [
    "**/*"
  ],
  "extraFiles": [
    { "from": "dist-react/", "to": "Resources/static/", "filter": "**/*" }
  ],

  "directories": {
    "buildResources": "assets",
    "output": "dist-electron"
  },

  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },

  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ]
  }
}
